<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <display-name>Simple Java WebApp</display-name>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <servlet>
        <display-name>Greeter</display-name>
        <servlet-name>greeterServlet</servlet-name>
        <servlet-class>com.playground.simplewebapp.Greeter</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>greeterServlet</servlet-name>
        <url-pattern>/greetUser</url-pattern>
    </servlet-mapping>

</web-app>